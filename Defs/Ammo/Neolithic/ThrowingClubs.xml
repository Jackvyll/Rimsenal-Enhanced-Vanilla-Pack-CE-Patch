<Defs>
	

	<!-- ================== Projectiles ================== -->

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseProjectileNeolithic" Name="BaseThrowingClubProjectile" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/ThrowingClub</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Blunt</damageDef>
		</projectile>
	</ThingDef>
	
	<!-- The amount of arrows usable over the ammo lifetime for each resource cost is equal to
	[r / (1 - x)];
		x = preExplosionSpawnChance,
		r = resource cost. -->
	
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseThrowingClubProjectile">
		<defName>Club_Thrown</defName>
		<label>club</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>15</damageAmountBase>
			<speed>30</speed>
			<armorPenetrationBase>0.18</armorPenetrationBase>
			<preExplosionSpawnChance>0.80</preExplosionSpawnChance>
			<preExplosionSpawnThingDef>Gun_ThrowingClubs</preExplosionSpawnThingDef>
		</projectile>
	</ThingDef>
  
	<!-- ==================== Recipes ========================== -->
	
</Defs>
